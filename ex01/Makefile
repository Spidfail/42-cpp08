CC := c++

NAME := ex01

CFLAGS := -Wall -Wextra -Werror -std=c++98 -Wno-shadow -fsanitize=address -g3

###############################################################################

INC := span.hpp

SRCS := span.cpp

MAIN := main.cpp

###############################################################################

all : 				$(NAME)

$(NAME) :			$(MAIN) $(SRCS) $(INC)
	$(CC) $(CFLAGS) -I$(INC) $< $(SRCS) -o $(NAME) 

###############################################################################

fclean :
	$(RM) $(NAME)

clean: fclean

re : clean fclean all

###############################################################################

.PHONY : all clean fclean re
